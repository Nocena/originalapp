{
  "compilerOptions": {
    "jsx": "preserve", // Enables JSX syntax
    "target": "esnext", // Allows modern ES features
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@graphql/*": ["src/graphql/*"],
      "@pages/*": ["src/pages/*"],
      "@views/*": ["src/views/*"],
      "@utils/*": ["src/lib/utils/*"],
      "@styles/*": ["src/styles/*"],
      "@public/*": ["public/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src/lib/utils/fsd", "src/sw.js"],
  "exclude": ["node_modules"]
}
